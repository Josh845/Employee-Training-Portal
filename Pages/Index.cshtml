            <span asp-validation-for="pass_word" class="text-bg-danger"> </span>

        <br />
            <div class="text-center">
                <br><br>
                <button asp-page-handler="Login" class="text-center btn btn-outline-success" type="submit"> Login </button>
                <br>
                
            </div>

            <label> @ViewData["inc_pass"] </label>
    </form>
    <br>
    </div>
